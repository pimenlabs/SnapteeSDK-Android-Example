<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SnapteeSDK" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/SnapteeSDKActionBar</item>
        <item name="android:editTextStyle">@style/SnapteeSDKEditTextSnaptee</item>
    </style>

    <style name="SnapteeSDKActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/co_snaptee_white</item>
        <item name="android:backgroundSplit">@color/co_snaptee_white</item>
        <item name="android:backgroundStacked">@color/co_snaptee_white</item>
        <item name="android:icon">@drawable/co_snaptee_actionbar_icon</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:homeAsUpIndicator">@drawable/co_snaptee_actionbar_up_indicator</item>
        <item name="android:selectableItemBackground">@color/co_snaptee_light_red</item>
        <item name="android:titleTextStyle">@style/SnapteeSDKActionBar.Text</item>
    </style>

    <style name="SnapteeSDKActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SnapteeSDKEditTextSnaptee" parent="android:Widget.EditText">
        <item name="android:background">@drawable/co_snaptee_edit_text</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>